@model ComplaintManagementPortal2.Models.ComplaintAdminViewModel
@using ComplaintManagementPortal2.Models
@{
    ViewBag.Title = "SendComplaint";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div class="row">

    </div>

    <div class="row" style="margin-left:0px;margin-right:0px;">
        <div class="col-lg-12">
            <div class=" form-page-container">
                <div class="panel panel-default">
                        <div class="panel-body form-page-panel">
                            @using (Html.BeginForm("SendComplaint", "Complaints", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="row ">

                                    <div class="col-lg-12 text-center">
                                        <h2>Complaint Form</h2>

                                    </div>


                                    <div class="col-lg-12 ">
                                        <div class="form-group">
                                            <span>
                                                Name
                                                <span class="required">*</span>
                                            </span>
                                            @Html.EditorFor(model => model.Complaint.Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.Complaint.Name, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-lg-12  ">
                                        <div class="form-group">
                                            <span>
                                                Gender
                                            </span>
                                            @*@Html.DropDownListFor(model => model.Complaint.GenderId, Model.Gender, htmlAttributes: new { @class = "form-control custfield" })*@
                                            @foreach (var item in Model.Gender)
                                            {
                                                <div class="radiorow">

                                                    @Html.RadioButtonFor(model => model.Complaint.GenderId, item.Value, htmlAttributes: new { @class = "radiobtns" })

                                                    <label for="@item.Text">@item.Text</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-lg-12 ">
                                        <div class="form-group">
                                            <span>
                                                Age
                                                <span class="required">*</span>
                                                @Html.ValidationMessageFor(model => model.Complaint.Age, "", new { @class = "text-danger" })
                                            </span>
                                            @Html.EditorFor(model => model.Complaint.Age, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        </div>
                                    </div>


                                    <div class="col-lg-12 ">
                                        <div class="form-group">
                                            <span>
                                                Your Complaint
                                                <span class="required">*</span>
                                                @Html.ValidationMessageFor(model => model.Complaint.YourComplaint, "", new { @class = "text-danger" })
                                            </span>
                                            @Html.EditorFor(model => model.Complaint.YourComplaint, new { htmlAttributes = new { @class = "form-control form-text-area", @rows = 8, autocomplete = "off" } })
                                        </div>
                                    </div>

                                    <div class="col-lg-12  ">
                                        <div class="form-group">
                                            <span>
                                                Picture
                                                (only png, jpg,jpeg, gif)
                                            </span>
                                            @Html.TextBox("MainImage", "", new { type = "file", @class = "form-control", accept = "image/*" })
                                        </div>
                                    </div>

                                    <div class="col-lg-12  ">
                                        <div class="form-group">
                                            <span>
                                                Work
                                                <span class="required">*</span>

                                            </span>
                                            @Html.DropDownListFor(model => model.Complaint.WorkId, Model.Work, htmlAttributes: new { @class = "form-control custfield" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group" style="margin-bottom: 2%;">
                                            @Html.CheckBoxFor(model => model.Complaint.SendmeEmails, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })

                                            <span class="checkboxtxt">
                                                May we send you emails?
                                                @Html.ValidationMessageFor(model => model.Complaint.SendmeEmails, "", new { @class = "text-danger" })
                                            </span>



                                        </div>
                                    </div>
                                    <div class="col-lg-12 " style="display:inline-block">

                                        &nbsp;
                                    </div>


                                    <div class="col-lg-12 " style="display:inline-block">

                                        &nbsp;
                                    </div>
                                    <div class="col-lg-12 text-center " style="display: inline-block;">
                                        <button type="submit" value="SUBMIT">
                                            Submit
                                        </button>
                                        @*type="submit" value="SUBMIT"*@
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>

