@using ComplaintManagementPortal2.Models;
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="row operation-row">
    <div class="col-lg-12 text-center">
        @switch (Request.QueryString["result"])
        {
            case "adddone":
                <div class="alert alert-success alert-dismissable">
                    <p class="fa fa-check"> </p>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button> Your Registration Completed Successfully
                </div>
                break;
         
        }
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4 login-form">

        <div class="row operation-row">
            <div class="col-lg-12">
                you don't have an account?
                <a href="@Url.Action("CreateCustomer", "Account")">Register Now</a>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
       
        <br>
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "E-mail", @class = "form-control", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>
                        <div class="checkbox">
                            @*@Html.CheckBoxFor(m => m.RememberMe, new { @class = "remember-me-check" })
                            @Html.LabelFor(m => m.RememberMe)*@

                            <p class="pull-right">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </p>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <input type="submit" value="Login" class="btn btn-lg btn-success btn-block" />




                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

