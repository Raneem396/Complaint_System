@model ComplaintManagementPortal2.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reset your password</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                <fieldset>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "E-mail", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                    </div>
                    <input type="submit" value="Reset" class="btn btn-lg btn-success btn-block" />
                </fieldset>
                        }
                </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





